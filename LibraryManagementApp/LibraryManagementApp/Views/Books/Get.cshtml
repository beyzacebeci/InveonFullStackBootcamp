@model Book

<div class="container text-center">
    <h3>Book Details</h3>
    <table class="table table-bordered table-striped table-hover mx-auto" style="width: 80%;">
        <tbody>
            <tr>
                <td><strong>ID:</strong></td>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <td><strong>Title:</strong></td>
                <td>@Model.Title</td>
            </tr>
            <tr>
                <td><strong>Author:</strong></td>
                <td>@Model.Author</td>
            </tr>
            <tr>
                <td><strong>Publication Year:</strong></td>
                <td>@Model.PublicationYear</td>
            </tr>
            <tr>
                <td><strong>ISBN:</strong></td>
                <td>@Model.ISBN</td>
            </tr>
            <tr>
                <td><strong>Genre:</strong></td>
                <td>@Model.Genre</td>
            </tr>
            <tr>
                <td><strong>Publisher:</strong></td>
                <td>@Model.Publisher</td>
            </tr>
            <tr>
                <td><strong>Page Count:</strong></td>
                <td>@Model.PageCount</td>
            </tr>
            <tr>
                <td><strong>Language:</strong></td>
                <td>@Model.Language</td>
            </tr>
            <tr>
                <td><strong>Summary:</strong></td>
                <td>@Model.Summary</td>
            </tr>
            <tr>
                <td><strong>Available Copies:</strong></td>
                <td>@Model.AvailableCopies</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
            <i class="fa-solid fa-house"></i>
            Home
        </a>
        <a class="btn btn-outline-primary" asp-controller="Books" asp-action="Index">
            <i class="fa-solid fa-list"></i>
            Go Book List
        </a>
    </div>
</div>
