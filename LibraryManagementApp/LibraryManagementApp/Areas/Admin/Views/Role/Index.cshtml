@model IEnumerable<IdentityRole>

<div class="text-center my-5">
    <div class="display-6 border-bottom">Roles</div>
</div>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-outline-success">
        <i class="fa fa-solid fa-plus"></i>
        Add Role
    </a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="text-center">Id</th>
            <th class="text-center">UserName</th>
            <th class="text-center">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IdentityRole role in Model)
        {
            <tr>
                <td class="text-nowrap">@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn btn-warning rounded-0" asp-action="Update" asp-route-id="@role.Id">
                            <i class="fa fa-solid fa-edit"></i>
                            Edit
                        </a>
                        <form method="post" asp-action="DeleteOneUser">
                            <input type="hidden" name="Name" value="@role.Name" />
                            <button type="submit" class="btn btn-danger rounded-0">
                                <i class="fa fa-solid fa-trash"></i>
                                Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
